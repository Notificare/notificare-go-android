<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/notification_title"
        style="@style/TextAppearance.Compat.Notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        tools:text="Pick-up in 5 mins" />

    <TextView
        android:id="@+id/notification_subtitle"
        style="@style/TextAppearance.Compat.Notification.Info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        tools:text="Grinding a few coffee beans!" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/notification_grinding_image"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/shape_coffee_brewer_circle_disabled"
            android:padding="4dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_coffee_beans_100"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/notification_brewing_progress_image"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_marginHorizontal="8dp"
            android:layout_weight="1"
            android:src="@drawable/shape_notification_progress_bar"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/notification_brewing_image"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/shape_coffee_brewer_circle_disabled"
            android:padding="4dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_coffee_pot_50"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/notification_serving_progress_image"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_marginHorizontal="8dp"
            android:layout_weight="1"
            android:src="@drawable/shape_notification_progress_bar"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/notification_serving_image"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/shape_coffee_brewer_circle_disabled"
            android:padding="4dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_coffee_cup_50"
            tools:ignore="ContentDescription" />

    </LinearLayout>

</LinearLayout>
