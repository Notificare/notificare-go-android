<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/notification_title"
        style="@style/TextAppearance.Compat.Notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        tools:text="@string/order_headline_shipped_title" />

    <TextView
        android:id="@+id/notification_subtitle"
        style="@style/TextAppearance.Compat.Notification.Info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        tools:text="@string/order_headline_shipped_subtitle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/notification_preparing_image"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/shape_circle_disabled"
            android:padding="4dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_baseline_shipping_box_24"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/notification_shipped_progress_image"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_marginHorizontal="8dp"
            android:layout_weight="1"
            android:src="@drawable/shape_notification_progress_bar"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/notification_shipped_image"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/shape_circle_disabled"
            android:padding="4dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_baseline_directions_bike_24"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/notification_delivered_progress_image"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_marginHorizontal="8dp"
            android:layout_weight="1"
            android:src="@drawable/shape_notification_progress_bar"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/notification_delivered_image"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/shape_circle_disabled"
            android:padding="4dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_baseline_home_24"
            tools:ignore="ContentDescription" />

    </LinearLayout>

</LinearLayout>
